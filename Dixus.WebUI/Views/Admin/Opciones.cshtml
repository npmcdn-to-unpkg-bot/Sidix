        <div class="content-padder">

            <h4 class="section-title">General</h4>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Numero de etapas del proyecto</label>
                        <div>
                            @Html.DropDownList("NumeroDeEtapas", null, "Selecciona un número..", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NumeroDeEtapas, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="section-title">Autocad</h4>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="checkbox checkbox-success">
                            @Html.CheckBoxFor(x => x.ValidarSuperficieTotal)
                            <label for="ValidarSuperficieTotal">Validar que area total esté exacta </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="checkbox checkbox-success">
                            @Html.CheckBoxFor(x => x.ValidarQuePoligonosNoSeSobrepongan)
                            <label for="ValidarQuePoligonosNoSeSobrepongan">Validar que los poligonos no se sobrepongan</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="checkbox checkbox-success">
                            @Html.CheckBoxFor(x => x.ValidarQueTodasLasGeometriasSeanPoligonos)
                            <label for="ValidarQueTodasLasGeometriasSeanPoligonos">Validar que todas las geometrias sean poligonos </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="checkbox checkbox-success">
                            @Html.CheckBoxFor(x => x.ValidarQuePoligonosSeanValidos)
                            <label for="ValidarQuePoligonosSeanValidos">Validar que poligonos sean validos </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="checkbox checkbox-success">
                            @Html.CheckBoxFor(x => x.ValidarQuePoligonosEstenCerrados)
                            <label for="ValidarQuePoligonosEstenCerrados">Validar que poligonos estén cerrados </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="checkbox checkbox-success">
                            @Html.CheckBoxFor(x => x.ValidarQueFraccionesNoSeanInmodificables)
                            <label for="ValidarQueFraccionesNoSeanInmodificables">Validar que fracciones sean modificables <span class="superscript-info" data-toggle="tooltip" data-placement="bottom" data-container="body" title="Las fracciones inmodificables son aquellas que ya estan ligadas a un terreno legal que no esté libre: ya sea donado, en garantía, vendido, comprometido, etc.">?</span> </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="form-group">
                        <label>Area total del proyecto</label>
                        <div>
                            @Html.EditorFor(model => model.AreaTotalDelProyectoEnMetros, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AreaTotalDelProyectoEnMetros, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="form-group">
                        <label>Margen de error total del proyecto</label>
                        <div>
                            @Html.EditorFor(model => model.ToleranciaEnM2ParaProyecto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ToleranciaEnM2ParaProyecto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="form-group">
                        <label>Tamaño máximo de sobreposiciones</label>
                        <div>
