@model Dixus.WebUI.Models.AdminOpcionesViewModel

@{
    ViewBag.Title = "Opciones";
}
<div id="pagina-opciones">
    <h3 class="page-title">Opciones</h3>
    <hr class="green-stripe" />
    <hr class="not-to-top" />

    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()
